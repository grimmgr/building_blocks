<div class="list-item">
    <h3>{{title}}</h3> <button class="deleteBtn" data-id={{id}}>x</button>
    {{#if description}}
    <p>{{description}}</p>
    {{/if}}
    <p>category: {{category}}</p>
    {{#if location}}
    <p>location: <span id="location-{{id}}"></span></p>
    {{/if}}
    {{#if collaborators}}
    <p>seeking collaborators: yes</p>
    {{else}}
    <p>seeking collaborators: no</p>
    {{/if}}
</div>