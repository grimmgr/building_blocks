<div class="wrapper">
    <div class="container">
        <div class="grid-style">
            <div class="grid-1">
                <form class="signup">
                    <div class="form-group">
                        <h2 class="directions">Create a<span class="fancy"> Username</span></h2>
                        <input type="username" class="form-control" id="username-input" placeholder="Username">
                        <h2 class="directions">Your<span class="fancy"> Email</span></h2>
                        <input type="email" class="form-control" id="email-input" placeholder="Email">
                        <h2 class="directions">Make a<span class="fancy"> Password</span></h2>
                        <input type="password" class="form-control" id="password-input" placeholder="Password">
                    </div>
                    <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span> <span class="msg"></span>
                    </div>
                    <h2 class="directions"><span class="fancy">Fin</span></h2>
                    <button type="submit" class="btn btn-default">JOIN!</button>
                </form>
            </div>
            <div class="grid-2">
                <div class="login">
                <p>or log in <a href="/">HERE</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>

